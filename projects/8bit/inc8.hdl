/**
 * 8-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP inc8 {
    IN in[8];
    OUT out[8];

    PARTS:
	add8(a=in, b[0]=true, b[1..7]=false, out=out);
}
